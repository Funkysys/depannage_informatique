---
export interface CardProps {
  title: string;
  description: string;
  imageUrl: string;
  imageAlt?: string;
}
const { title, description, imageUrl, imageAlt = "Image" } = Astro.props;
---

<div class="relative flex flex-col items-center w-full max-w-sm p-4 overflow-hidden border-2 border-blue-800 shadow-2xl sm:p-6 md:p-8 rounded-2xl bg-gray-900/90 backdrop-blur-md animate-fade-in">
  <img src={imageUrl} alt={imageAlt} class="object-cover w-full h-48 mb-4 shadow-md rounded-xl" loading="lazy" />
  <h3 class="mb-2 text-xl font-bold text-center text-blue-200">{title}</h3>
  <p class="text-base text-center text-blue-100">{description}</p>
</div>
