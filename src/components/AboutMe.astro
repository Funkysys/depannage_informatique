---
import '../styles/animations.css';
import { aboutMe } from '../utils/about';
---


<section class="relative flex flex-col items-center justify-center w-full px-2 mb-8 sm:px-4 animate-fade-in min-h-[400px] sm:min-h-[500px]">
  <div class="relative z-10 flex flex-col items-center w-full max-w-2xl p-6 border-2 shadow-2xl border-custom-border sm:p-10 rounded-2xl bg-gray-900/80 backdrop-blur-md">
  <img src="/photo_profil.png" alt="Avatar" class="object-cover w-24 h-24 mb-4 bg-gray-800 border-4 rounded-full shadow-lg border-custom-border" loading="lazy" />
    <h2 class="mb-2 text-2xl font-extrabold tracking-wide text-center text-blue-200 sm:text-3xl md:text-4xl drop-shadow">{aboutMe.title}</h2>
  <p class="max-w-xl mb-6 text-lg font-medium text-center text-blue-100 sm:text-xl md:text-2xl animate-fade-in">{aboutMe.description}</p>
    <div class="flex flex-col items-center w-full gap-2 mt-2 sm:gap-3">
  <h3 class="mb-1 text-xl font-bold tracking-wide text-blue-300 sm:text-2xl">Points forts</h3>
  <ul class="flex flex-wrap justify-center w-full gap-3">
  <li class="px-4 py-2 text-base font-semibold text-blue-100 border rounded-full shadow border-custom-border bg-blue-800/40">Réactivité</li>
  <li class="px-4 py-2 text-base font-semibold text-blue-100 border rounded-full shadow border-custom-border bg-blue-800/40">Pédagogie</li>
  <li class="px-4 py-2 text-base font-semibold text-blue-100 border rounded-full shadow border-custom-border bg-blue-800/40">Polyvalence</li>
  <li class="px-4 py-2 text-base font-semibold text-blue-100 border rounded-full shadow border-custom-border bg-blue-800/40">Passion tech</li>
  <li class="px-4 py-2 text-base font-semibold text-blue-100 border rounded-full shadow border-custom-border bg-blue-800/40">Conseil personnalisé</li>
      </ul>
    </div>
  </div>
</section>


