---
import { reviews } from '../utils/reviews';
---

<section class="relative flex flex-col items-center justify-center w-full px-2 mb-8 sm:px-4 animate-fade-in min-h-[300px]">
  <div class="absolute inset-0 z-0 min-h-full bg-gradient-to-br from-gray-900 via-blue-900 to-gray-800 opacity-90 blur-xl"></div>
  
  <div class="relative z-10 w-full max-w-6xl p-4 border-2 border-blue-800 shadow-2xl sm:p-6 md:p-8 rounded-2xl bg-gray-900/90 backdrop-blur-md">
    <h2 class="mb-8 text-2xl font-extrabold tracking-wide text-center text-blue-200 sm:text-3xl md:text-4xl">
      ⭐ Avis clients
    </h2>
    
    <!-- Grille d'avis responsive -->
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 sm:gap-6">
      {reviews.slice(0, 6).map(review => (
        <div class="p-4 transition-colors duration-200 border border-blue-800 shadow sm:p-5 bg-blue-900/30 rounded-xl hover:bg-blue-900/50">
          <!-- Header avec nom et étoiles -->
          <div class="flex items-center justify-between mb-3">
            <h3 class="text-sm font-bold text-blue-100 sm:text-base">{review.name}</h3>
            <div class="flex">
              {Array.from({ length: review.rating }, () => (
                <span class="text-sm text-yellow-400">⭐</span>
              ))}
              {Array.from({ length: 5 - review.rating }, () => (
                <span class="text-sm text-gray-500">☆</span>
              ))}
            </div>
          </div>
          
          <!-- Service -->
          {review.service && (
            <div class="mb-2">
              <span class="px-2 py-1 text-xs font-semibold text-blue-200 rounded-full bg-blue-800/40">
                {review.service}
              </span>
            </div>
          )}
          
          <!-- Commentaire -->
          <p class="mb-3 text-sm italic text-blue-50 line-clamp-4">{review.comment}</p>
          
          <!-- Date -->
          <p class="text-xs text-blue-300">{review.date}</p>
        </div>
      ))}
    </div>
    
    <!-- Note moyenne -->
    <div class="flex items-center justify-center gap-4 p-4 mt-8 border bg-blue-900/20 rounded-xl border-blue-800/50">
      <div class="text-center">
        <div class="text-2xl font-bold text-yellow-400">4.3/5</div>
        <div class="flex justify-center mb-1">
          {Array.from({ length: 4 }, (_, i) => (
            <span class="text-yellow-400">⭐</span>
          ))}
          <span class="text-gray-500">⭐</span>
        </div>
        <p class="text-xs text-blue-300">Basé sur {23} avis</p>
      </div>
      <div class="text-center">
        <div class="text-lg font-semibold text-blue-200">83%</div>
        <p class="text-xs text-blue-300">Clients satisfaits</p>
      </div>
    </div>
  </div>
</section>