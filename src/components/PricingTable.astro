---
import '../styles/animations.css';
import { pricingTable } from '../utils/pricing';
---




<section class="relative flex flex-col items-center justify-center w-full px-2 mb-8 sm:px-4 animate-fade-in min-h-[350px] sm:min-h-[420px]">
  <div class="absolute inset-0 z-0 min-h-full bg-custom-bg opacity-90 blur-xl"></div>
  <div class="relative z-10 w-full md:max-w-[50%] p-3 border-2 shadow-2xl border-custom-border sm:p-6 md:p-10 rounded-2xl bg-gray-900/90 backdrop-blur-md">
    <h2 class="mb-6 text-xl font-extrabold tracking-wide text-center text-blue-200 sm:text-2xl md:text-3xl">Tarifs</h2>
    <div class="overflow-x-auto">
      <table class="w-full min-w-[340px] border-collapse text-base sm:text-lg md:text-xl">
        <thead>
          <tr class="text-blue-200 bg-blue-900">
            <th class="p-2 text-left sm:p-3">Service</th>
            <th class="p-2 text-left sm:p-3">Prix</th>
          </tr>
        </thead>
        <tbody>
          {pricingTable.map(item => (
            <tr class="transition-colors border-b border-custom-border hover:bg-blue-900/30">
              <td class="p-2 font-semibold text-blue-100 sm:p-3">{item.service}</td>
              <td class="p-2 text-blue-200 sm:p-3">{item.price}</td>
            </tr>
          ))}
        </tbody>
      </table>
  <h3 class="mt-6 text-blue-200">**Tarifs&nbsp;: sur facture ou en ch√®ques emplois service.</h3>
    </div>
  </div>
</section>


