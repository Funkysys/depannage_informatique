---
import '../styles/animations.css';
import { services } from '../utils/services';
---



<section class="relative flex flex-col items-center justify-center w-full px-2 mb-8 sm:px-4 animate-fade-in min-h-[350px] sm:min-h-[420px]">

  <div class="relative z-10 w-full max-w-5xl p-3 border-2 shadow-2xl sm:p-6 md:p-10 border-custom-border rounded-2xl bg-gray-900/90 backdrop-blur-md">
    <h2 class="mb-8 text-xl font-extrabold tracking-wide text-center text-blue-200 sm:text-2xl md:text-3xl">Nos services</h2>
    <div class="flex flex-col gap-4 sm:hidden">
      {services.map(service => (
        <div class="flex flex-col gap-2 p-4 transition border shadow rounded-xl bg-blue-900/30 border-custom-border hover:bg-blue-900/50">
          <span class="block text-sm font-bold text-blue-100">{service.name}</span>
          <span class="block text-xs italic text-blue-50">{service.description}
            {service.link && (
              <a href={service.link} target="_blank" rel="noopener" class="ml-2 text-blue-200 underline hover:text-blue-400">Voir portfolio</a>
            )}
          </span>
        </div>
      ))}
    </div>
    <div class="hidden overflow-x-auto sm:block">
      <table class="w-full text-left border-separate border-spacing-y-2">
        <thead>
          <tr>
            <th class="px-6 py-4 text-lg font-extrabold tracking-wide text-blue-100 bg-blue-900/60 rounded-l-xl">Service</th>
            <th class="px-6 py-4 text-lg font-extrabold tracking-wide text-blue-100 bg-blue-900/60 rounded-r-xl">Description</th>
          </tr>
        </thead>
        <tbody>
          {services.map(service => (
            <tr class="transition-colors duration-200 hover:bg-blue-900/30">
              <td class="w-1/4 px-6 py-5 font-bold align-top text-blue-50 whitespace-nowrap">{service.name}</td>
              <td class="w-3/4 px-6 py-5 italic align-top text-blue-50">
                {service.description}
                {service.link && (
                  <a href={service.link} target="_blank" rel="noopener" class="ml-2 text-blue-200 underline hover:text-blue-400">Voir portfolio</a>
                )}
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>


