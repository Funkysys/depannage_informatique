---
import Analytics from '@vercel/analytics/astro'
import ChatBoxSimple from '../components/ChatBoxSimple.astro'
---

<!doctype html>
<html lang="fr">
	<head>
		<link rel="stylesheet" href="/src/styles/tailwind.css" />
		<link rel="stylesheet" href="/src/styles/fonts.css" />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title ?? 'Dépannage Informatique à Domicile - Réparation PC Mac | Antoine Delbos'}</title>
		<meta name="description" content={Astro.props.description ?? "Dépannage informatique à domicile sur Toulouse et Haute-Garonne. Réparation PC/Mac, récupération de données, installation, formation. Intervention rapide 7j/7. Devis gratuit ☎️"} />
		<meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
		<meta name="author" content="Antoine Delbos" />
		<meta name="keywords" content="dépannage informatique domicile, réparation ordinateur, assistance informatique Toulouse, technicien PC Mac Haute-Garonne, récupération données, installation Windows, cybersécurité, maintenance informatique, conseil achat ordinateur, formation informatique senior" />
		<meta name="theme-color" content="#0ea5e9" />
		<meta name="geo.region" content="FR-31" />
		<meta name="geo.placename" content="Toulouse, Haute-Garonne" />
		<meta name="DC.title" content="Dépannage Informatique à Domicile" />
		<link rel="canonical" href="https://antoineinformatique.fr{Astro.url.pathname}" />
		<link rel="alternate" href="https://antoineinformatique.fr{Astro.url.pathname}" hreflang="fr" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="dns-prefetch" href="https://api.resend.com" />
		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="fr_FR" />
		<meta property="og:title" content="Dépannage Informatique - Réparation, Conseil & Services à domicile" />
		<meta property="og:description" content="Dépannage informatique à domicile, réparation PC/Mac, conseils, installation, cybersécurité et assistance pour particuliers et professionnels." />
		<meta property="og:url" content="https://antoineinformatique.fr{Astro.url.pathname}" />
		<meta property="og:site_name" content="Antoine Informatique" />
		<meta property="og:image" content="https://antoineinformatique.fr/info.png" />
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Dépannage Informatique - Réparation, Conseil & Services à domicile" />
		<meta name="twitter:description" content="Dépannage informatique à domicile, réparation PC/Mac, conseils, installation, cybersécurité et assistance pour particuliers et professionnels." />
		<meta name="twitter:image" content="https://antoineinformatique.fr/info.png" />
		<!-- Favicon Apple/Windows -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<!-- Schema.org Enhanced -->
		<script type="application/ld+json">
			{JSON.stringify({
				'@context': 'https://schema.org',
				'@type': 'LocalBusiness',
				'@id': 'https://antoineinformatique.fr/#business',
				name: 'Antoine Delbos - Dépannage Informatique',
				alternateName: 'Antoine Informatique',
				url: 'https://antoineinformatique.fr',
				logo: 'https://antoineinformatique.fr/info.png',
				image: 'https://antoineinformatique.fr/info.png',
				description: 'Dépannage informatique à domicile sur Toulouse et Haute-Garonne. Réparation PC/Mac, récupération de données, installation, formation. Intervention rapide 7j/7.',
				priceRange: '€€',
				telephone: '+33-6-12-34-56-78',
				email: 'contact@antoineinformatique.fr',
				address: {
					'@type': 'PostalAddress',
					streetAddress: 'Secteur Lancefoc',
					addressLocality: 'Toulouse',
					addressRegion: 'Haute-Garonne',
					postalCode: '31300',
					addressCountry: 'FR',
					areaServed: 'Haute-Garonne'
				},
				geo: {
					'@type': 'GeoCoordinates',
					latitude: '43.5884',
					longitude: '1.4632'
				},
				openingHours: [
					'Mo-Fr 09:00-19:00',
					'Sa 10:00-17:00'
				],
				serviceArea: {
					'@type': 'GeoCircle',
					geoMidpoint: {
						'@type': 'GeoCoordinates',
						latitude: '43.5884',
						longitude: '1.4632'
					},
					geoRadius: '25000'
				},
				hasOfferCatalog: {
					'@type': 'OfferCatalog',
					name: 'Services de dépannage informatique',
					itemListElement: [
						{
							'@type': 'Offer',
							itemOffered: {
								'@type': 'Service',
								name: 'Dépannage PC/Mac',
								description: 'Réparation et maintenance ordinateurs'
							}
						},
						{
							'@type': 'Offer',
							itemOffered: {
								'@type': 'Service',
								name: 'Récupération de données',
								description: 'Récupération fichiers supprimés ou corrompus'
							}
						}
					]
				},
				aggregateRating: {
					'@type': 'AggregateRating',
					ratingValue: '4.3',
					reviewCount: '6',
					bestRating: '5',
					worstRating: '1'
				},
				contactPoint: {
					'@type': 'ContactPoint',
					telephone: '+33-6-12-34-56-78',
					contactType: 'customer service',
					availableLanguage: 'French',
					areaServed: 'FR'
				},
				sameAs: [
					'https://www.linkedin.com/in/antoine-delbos-916250223',
					'https://github.com/Funkysys'
				]
			})}
		</script>
	</head>
	<body class="w-[100vw] min-h-[100vh] overflow-x-hidden">
		<nav class="w-full shadow bg-custom-nav font-nav">
			<div class="container flex items-center justify-between px-4 py-4 mx-auto">
				<a href="/" class="text-xl font-extrabold tracking-widest text-sky-100 ">Antoine Informatique</a>
				<button id="nav-toggle" class="flex items-center px-3 py-2 text-blue-200 border rounded border-custom-border sm:hidden hover:bg-blue-800/40 focus:outline-none" aria-label="Ouvrir le menu">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round"><path d="M4 6h16M4 12h16M4 18h16"/></svg>
				</button>
				<div id="nav-menu" class="absolute left-0 z-50 flex-col hidden w-full gap-4 px-4 py-4 border-b border-custom-border sm:flex sm:flex-row sm:gap-8 sm:static top-16 sm:w-auto bg-gray-900/95 sm:bg-transparent sm:px-0 sm:py-0 sm:border-none">
					<a href="/" class="block px-3 py-2 text-base font-semibold text-white transition-colors rounded hover:bg-blue-800 hover:text-blue-200">Accueil</a>
					<a href="/services" class="block px-3 py-2 text-base font-semibold text-white transition-colors rounded hover:bg-blue-800 hover:text-blue-200">Services</a>
					<a href="/tarifs" class="block px-3 py-2 text-base font-semibold text-white transition-colors rounded hover:bg-blue-800 hover:text-blue-200">Tarifs</a>
					<a href="/a-propos" class="block px-3 py-2 text-base font-semibold text-white transition-colors rounded hover:bg-blue-800 hover:text-blue-200">À propos</a>
					<a href="/contact" class="block px-3 py-2 text-base font-semibold text-white transition-colors rounded hover:bg-blue-800 hover:text-blue-200">Contact</a>
				</div>
			</div>
			<script type="module">
				const navToggle = document.getElementById('nav-toggle');
				const navMenu = document.getElementById('nav-menu');
				navToggle?.addEventListener('click', () => {
					navMenu.classList.toggle('hidden');
				});
				// Fermer le menu au clic sur un lien (mobile)
				navMenu?.querySelectorAll('a').forEach(link => {
					link.addEventListener('click', () => {
						if (window.innerWidth < 640) navMenu.classList.add('hidden');
					});
				});
			</script>
		</nav>
		<main class="flex flex-col items-center justify-center w-[100vw] min-h-[100vh] bg-custom-bg">
			<slot />
		</main>
		<footer class="w-full py-6 text-center text-gray-300 border-t border-custom-border text-md bg-custom-bg">
			<div class="flex flex-col items-center justify-between max-w-4xl gap-2 px-4 mx-auto text-sm md:flex-row text-zinc-400">
				<span>&copy; {new Date().getFullYear()} Antoine Delbos</span>
				<div class="flex gap-4">
					<a
						href="/mentions-legales"
						class="transition-colors hover:text-blue-200"
					>
						Mentions légales
					</a>
					<a
						href="/politique-de-confidentialite"
						class="transition-colors hover:text-blue-200"
					>
						Politique de confidentialité
					</a>
				</div>
			</div>
		</footer>
		<ChatBoxSimple />
		<Analytics />
	</body>
</html>


